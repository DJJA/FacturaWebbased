@using Models
@model FacturaWeb.ViewModels.TaskViewModel
@{
    ViewBag.Title = "Diensten overzicht";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (@Html.BeginForm("CreateNewTask", "Task", FormMethod.Post))
{
    <input type="submit" value="Nieuwe dienst" />
    <br /><br />
}

@using (@Html.BeginForm("Index", "Task", FormMethod.Get))
{
    <div class="pull-right">
        <b>Zoeken op dienstomschrijving:</b><br/>
        @Html.TextBox("search") <input type="submit" value="Search"/>
    </div>
}

<style type="text/css">
    td {
        padding: 0 15px 0 15px;
    }

    th {
        padding: 0 15px 0 15px;
    }
    tbody {
        height: 370px !important;
        overflow-y: auto;
        display: block;
    }
    ::-webkit-scrollbar {
        width: 0px;
    }
    thead, tbody tr{
        display:table;
        width:100%;
        table-layout:fixed;/* even columns width , fix width of table too*/
    }
</style>
<br/>
<br/>
<br/>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Dienstnr</th>
        <th>Omschrijving</th>
        
    </tr>
    </thead>
    <tbody>
    @foreach (Task task in @Model.Tasks)
    {
        <tr>
            <th scope="row">@task.Id</th>
            <td>@task.Description</td>

            @*<td>@Html.ActionLink("Bewerken", "UpdateCustomer", task)</td>*@

        </tr>
    }
    </tbody>
</table>

