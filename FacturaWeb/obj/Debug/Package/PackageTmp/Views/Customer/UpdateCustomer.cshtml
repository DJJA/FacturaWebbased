@model FacturaWeb.ViewModels.InvoiceCustomerViewModel

@{
    ViewBag.Title = @Model.Customer.LastName + @Model.Customer.FirstName + " wijzigen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<br/>

@using (Html.BeginForm("UpdateCustomerInDb", "Customer", FormMethod.Post))
{
    <label>Klantnummer: &nbsp;</label>
    <label name="lbId"> @Model.Customer.ID</label>
    <input type="hidden" name="lbId" value="@Model.Customer.ID" id="customerId"/>

    <br/>
    <input type="text" name="tbFirstname" value="@Model.Customer.FirstName"/>
    <input type="text" name="tbPrefix" value="@Model.Customer.Preposition"/>
    <input type="text" name="tbSurname" value="@Model.Customer.LastName"/>
    <br/>
    <br/>
    <input type="text" name="tbStreet" value="@Model.Customer.Address.StreetName"/>
    <input type="text" name="tbPlace" value="@Model.Customer.Address.Place"/>
    <input type="text" name="tbZipcode" value="@Model.Customer.Address.ZipCode"/>
    <br/>
    <br/>
    <input type="text" name="tbEmail" value="@Model.Customer.Email"/>
    <input type="text" name="tbPhonenumber" value="@Model.Customer.PhoneNumber"/>
    <br/>
    <br/>
    <input type = "submit" value = "Wijzigen" />
}
