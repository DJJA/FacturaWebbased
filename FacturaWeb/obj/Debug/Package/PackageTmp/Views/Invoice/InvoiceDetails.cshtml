@using Models
@model Models.Invoice
@{
    ViewBag.Title = "InvoiceDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .size{
        width: 500px;
    }
</style>

<h2>Factuur overzicht: @Model.Customer.FirstName @Model.Customer.Preposition @Model.Customer.LastName</h2>
<br />
<div class="size">
    <table class="table table-dark">
        <tr>
            <td><b>Factuurnummer:</b></td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td><b>Factuur verzonden op:</b></td>
            <td>@Model.DateSend</td>
        </tr>
        <tr>
            <td><b>Factuur betaald op:</b></td>
            <td>@Model.DatePayed</td>
        </tr>
        <tr>
            <td><b>Totaal prijs</b></td>
            <td>€ @Model.TotalPrice.ToString("0.##").Replace(".", ",")</td>
        </tr>
    </table>
</div>

<h3>Diensten:</h3>
<table class="table table-bordered">
    <tr>
        <th>Datum</th>
        <th>Omschrijving</th>
        <th>Aantal</th>
        <th>Totaal prijs</th>
    </tr>
    @foreach (Task task in @Model.Tasks)
    {
        <tr>
            <td>@task.Date</td>
            <td>@task.Description</td>
            <td>@task.Amount.ToString("0.##").Replace(".", ",")</td>
            <td>€ @task.Price.ToString("0.##").Replace(".", ",")</td>
        </tr>

    }
</table>