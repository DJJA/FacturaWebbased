@using Models
@model CompanyStatistics
@{
    Layout = null;
}
<style>
    .widediv {
        width: 100%;
        height: 30%;
        overflow: auto;
    }
    td {
        padding: 0 15px 0 15px;
    }

    th {
        padding: 0 15px 0 15px;
    }
    tbody {
        height: 225px !important;
        overflow-y: auto;
        display: block;
    }
    ::-webkit-scrollbar {
        width: 0px;
    }
    thead, tbody tr{
        display:table;
        width:100%;
        table-layout:fixed;/* even columns width , fix width of table too*/
    }
</style>
<br/>
<div class="widediv">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Factuurnummer</th>
            <th>Voornaam</th>
            <th>Voorvoegsel</th>
            <th>Achternaam</th>
            <th>Betaaldatum</th>
            <th>Totaal prijs</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var invoice  in @Model.CustomerInvoices)
        {
            <tr>
                @if (invoice.Id == 0)
                {
                    <th scope="row"><b>Geen factuur</b></th>
                    <td>@invoice.Customer.FirstName</td>
                    <td>@invoice.Customer.Preposition</td>
                    <td>@invoice.Customer.LastName</td>
                    <td>----------</td>
                    <td>----------</td>
                }
                else
                {
                    <td>@invoice.Id</td>
                    <td>@invoice.Customer.FirstName</td>
                    <td>@invoice.Customer.Preposition</td>
                    <td>@invoice.Customer.LastName</td>

                     if (invoice.DatePayed == new DateTime())
                     {
                         <td><b>Onbetaald</b></td>
                     }
                     else
                     {
                         <td>@invoice.DatePayed</td>
                     }
                    <td>€ @invoice.TotalPrice</td>
                }
                
                

                
            </tr>
        }
        </tbody>
    </table>
</div>